{
    "manifest_version": 2,
  
    "name": "NOpinion",
    "description": "Remove Polygon's Opinion Articles",
    "version": "1.1",
    "short_name": "NOpinion: No Mo' Polygon Op Articles",
    "icons": 
      {
        "16": "NopinionIcon16.png",
        "48": "NopinionIcon48.png",
        "128": "NopinionIcon.png"
      },
    "browser_action": {
      "default_icon": "NopinionIcon.png",
      "default_popup": "popup.html",
      "default_title": "NOpinion"
    },

    "content_scripts": [{
        "matches": ["*://*.polygon.com/*"],
        "js": ["opinionHider.js"],
        "run_at": "document_end"
      }],

    "permissions": 
    [
      "storage",
      "tabs"
    ]
  }